---
interface Props {
  id: string;
  name: string;
  label: string;
  options: { value: string; label: string }[];
  required?: boolean;
}

const { label, id, options, ...rest } = Astro.props;
---

<div class="field">
  <label class="field__label" for={id}>{label}</label>
  <select class="field__select" id={id} {...rest}>
    {
      options.map((option) => (
        <option value={option.value}>{option.label}</option>
      ))
    }
  </select>
</div>

<style>
  .field {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .field::after {
    content: '';
    position: absolute;
    top: 3.75rem;
    right: 1rem;
    pointer-events: none;
    border-left: 0.5rem solid transparent;
    border-right: 0.5rem solid transparent;
    border-top: 0.5rem solid black;
  }

  .field__label {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .field__select {
    appearance: none;
    height: 3.5rem;
    padding: 1rem;
    font-size: 1.25rem;
    font-family: inherit;
    border-radius: 0.5rem;
    border: none;
    color: inherit;
    background-color: var(--color-primary-100);
    box-shadow: 0 0.25rem 0.5rem var(--color-primary-700);
  }

  .field__select:hover,
  .field__select:focus {
    outline: none;
  }

  .field__select:active {
    outline: none;
  }
</style>
