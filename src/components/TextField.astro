---
interface Props {
  id: string;
  name: string;
  label: string;
  type: 'text' | 'number';
  placeholder?: string;
  required?: boolean;
}

const { label, id, ...rest } = Astro.props;
---

<div class="field">
  <label class="field__label" for={id}>{label}</label>
  <input class="field__input" id={id} {...rest} />
</div>

<style>
  .field {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .field__label {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .field__input {
    padding: 1rem;
    font-size: 1.25rem;
    font-family: inherit;
    border-radius: 0.5rem;
    border: none;
    color: inherit;
    background-color: var(--color-primary-100);
    box-shadow: 0 0.25rem 0.5rem var(--color-primary-700);
  }

  .field__input:hover,
  .field__input:focus {
    outline: none;
  }

  .field__input:active {
    outline: none;
  }
</style>
