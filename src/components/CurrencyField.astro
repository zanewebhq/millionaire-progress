---
interface Props {
  id: string;
  name: string;
  label: string;
  type: 'text' | 'number';
  placeholder?: string;
  required?: boolean;
  value?: number;
  min: string;
  max: string;
}

const { label, id, ...rest } = Astro.props;
---

<div class="field">
  <label class="field__label" for={id}>{label}</label>
  <div class="field__input-wrapper">
    <div id={`${id}-prepend`} class="field__input-prepend">$</div>
    <input class="field__input" id={id} {...rest} />
  </div>
</div>

<style>
  .field {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
  }

  .field__label {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .field__input-wrapper {
    display: flex;
    background-color: var(--color-primary-100);
    box-shadow: 0 0.25rem 0.5rem var(--color-primary-700);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .field__input-prepend {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 3.5rem;
    height: 3.5rem;
    font-size: 1.25rem;
    font-weight: 500;
    border: none;
    background-color: var(--color-primary-200);
  }

  .field__input {
    width: 100%;
    height: 3.5rem;
    padding: 1rem;
    border: none;
    font-size: 1.25rem;
    font-family: inherit;
    color: inherit;
    background: none;
  }

  .field__input:hover,
  .field__input:focus {
    outline: none;
  }

  .field__input:active {
    outline: none;
  }
</style>
